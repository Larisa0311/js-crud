{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">


  {{#with data.list}}
  <form method="POST" action="/purchase-update?id={{id}}" class='form-card'>
    {{> heading title='Інформація про замовлення'}}

    {{> field label="ID" value=id}}
    {{> divider}}

    <div class="card__customer">
      {{> field label="Ім'я" value=firstname}}
      {{> field label="Прізвище" value=lastname}}
      {{> field label="Телефон" value=phone}}
      {{>field label="Електронна адреса" value=email}}
    </div>
    {{> divider}}

    <div class="card">
      {{> field label="Адреса доставки" value=address}}
      {{> field label="Товар" value=product.title}}
    </div>
    {{> divider}}

    <div class="card__customer">
      {{> field label="Вартість товарів" value=productPrice}}
      {{>field label="Вартість доставки" value=deliveryPrice}}
      {{> field label="Сума замовлення" value=totalPrice}}
      {{> field label="Нараховані бонуси" value=counteredBonus}}

    </div>
    {{> divider}}
    {{> button text="Змінити дані"}}

  </form>
  {{/with}}



</main>

