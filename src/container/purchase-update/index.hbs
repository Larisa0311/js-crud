{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">


  {{#with data.list}}
  <form method="POST" action="/purchase-upddate?id={{id}}" class='form-card'>
    {{> heading title='Зміна даних'}}

    {{> field label="ID" value=id}}
    {{> divider}}

    <div class="card__customer">
      {{> field label="Ім'я" value=firstname}}
      {{> field label="Прізвище" value=lastname}}
      {{> field label="Телефон" value=phone}}
      {{>field label="Електронна адреса" value=email}}

    </div>
    {{> divider}}

    {{> button text="Зберегти дані"}}
  </form>
  {{/with}}



</main>

